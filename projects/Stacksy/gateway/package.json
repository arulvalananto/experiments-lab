{
    "name": "stacksy-gateway",
    "version": "1.0.0",
    "description": "API Gateway for Stacksy microservices",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "type-check": "tsc --noEmit",
        "lint": "npx eslint src",
        "lint:fix": "npx eslint src --fix",
        "prettier": "npx prettier src --check",
        "prettier:fix": "npx prettier src --check --write",
        "pre-commit": "npm run prettier && npm run lint",
        "pre-commit:fix": "npm run prettier:fix && npm run lint:fix"
    },
    "keywords": [
        "fastify",
        "gateway",
        "api",
        "microservices"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@fastify/cors": "^11.2.0",
        "@fastify/helmet": "^13.0.2",
        "@fastify/jwt": "^10.0.0",
        "@fastify/rate-limit": "^10.3.0",
        "@fastify/static": "^9.0.0",
        "dotenv": "^17.3.1",
        "fastify": "^5.7.4",
        "http-proxy": "^1.18.1",
        "pino": "^10.3.1",
        "pino-pretty": "^13.1.3"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "@types/http-proxy": "^1.17.17",
        "@types/node": "^25.3.0",
        "@typescript-eslint/eslint-plugin": "^8.56.0",
        "@typescript-eslint/parser": "^8.56.0",
        "eslint": "^10.0.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    }
}
